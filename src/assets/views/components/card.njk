<div class="card" id="{{ product.id }}" data-product-card>
  {% if product.image %}
  <img src="{{ product.image }}" alt="{{ product.name }}"/>
  {% else %}
  <img src="/assets/images/img-52.png" alt=""/>
  {% endif %}
  <div class="card__body">
    <div class="card__inner">
      <h3 class="fs-5 font-sans margin--none">{{ product.name }}</h3>
      {% if product.description %}
        <p class="margin--none">{{ product.description }}</p>
      {% endif %}
      {% if product.price %}
        <p class="margin--none">$ {{ product.price }}</p>
      {% endif %}
      <form class="card__footer" data-cart-product="{{ product.id }}">
        {% if product.variants %}
        <div class="spaced cluster gap-s padding-s">
        {% for variant in product.variants %}
          <div class="checkable">
            <input type="radio" name="selected-variant" id="variant-{{ variant.id }}" value="{{ variant.id }}">
            <label for="variant-{{ variant.id }}"><b>{{ variant.name }}</b><br>$ {{ variant.price | fixed }}</label>
          </div>
        {% endfor %}
        </div>
        {% endif %}
        <div class="spaced cluster gap-s padding-s">
          <label for="qty-{{ product.id }}">
            <span aria-hidden="true">Qty:</span>
            <span class="visually-hidden">Quantity</span>
          </label>
          <input 
            type="number"
            value="0"
            type="number"
            min="0"
            max="10"
            style="width: 5ch"
            data-update-cart="{{ product.id }}"
            name="quantity"
            id="qty-{{ product.id }}">
        </div>
      </form>
    </div>
  </div>
</div>